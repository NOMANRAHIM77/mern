<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
    <div id="main-2">
        <a href="/">Back To Home</a>
        <ins><h1 id="heading-1">All Users</h1></ins>
       <div class="users"> 

        <% if(users.length>0){ %>

            <% users.forEach(function(e){ %>
                      
                <div class="user">
                    <div class="user-img"> 
            <img  style="width: 100%;height: 100%; object-fit: cover; overflow: hidden; " src="<%= e.image %>" alt="">
                         </div>
                    <h2 class="details"><%= e.name %></h2>
                    <h2 class="details"><%= e.email %></h2>
                    <div class="routes">
                        <a style="color: blue;" href="/edit/<%=e.id  %>">Edit User</a>
                        <a style="color: red;" href="/delete/<%= e._id%>">Delete User</a>
                    </div>
                    <% }) %>

      <%  } else {%>
       <h1  style="margin-top: 30PX; color: red;" >NO USERS ADDED</h1>
        <% } %>

       
        </div>
       </div>
    </div>
</body>
</html>




